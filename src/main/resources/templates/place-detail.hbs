
{{#partial "content"}}
    <p>Content:</p>
    <p>{{ places.places }}</p>
    <h5>Created At:</h5>
    <p> {{ places.createdAt }}</p>
    <h5>Post status:</h5>
    <p>
        {{#if placesYouveBeen.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
        <a href="/places/{{places.id}}/update">Edit this location</a>
        <a href="/places/{{places.id}}/delete">DELETE this post (no undo)</a>
    </p>
{{/partial}}

{{> layout.hbs}}